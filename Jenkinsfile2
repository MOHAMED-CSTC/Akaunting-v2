pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Building...'
      }
    }
    stage('Test') {
      steps {
        echo 'Testing...'
        snykSecurity(
          snykInstallation: 'Snyk',
          snykTokenId: 'Snyk_AP',
          // Autres paramètres optionnels :
          additionalArguments: '--all-projects --detection-depth=3', // Scanne tous les projets avec une profondeur de détection de 3
          monitorProjectOnBuild: true, // Surveille le projet pour détecter les nouvelles vulnérabilités
          failOnIssues: true          // Échoue le pipeline si des vulnérabilités sont trouvées
        )
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying...'
      }
    }
  }
}
