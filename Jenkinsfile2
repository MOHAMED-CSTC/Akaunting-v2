pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                // Récupérer le code source depuis le dépôt SCM
                checkout scm
            }
        }

        stage('OWASP SCAN') {
            steps {
                // Exécute l'analyse OWASP Dependency-Check
                dependencyCheck additionalArguments: '--scan ./ --out ./dependency-check-report', odcInstallation: 'dependency-check'

                // Publie les résultats de l'analyse sous forme de rapport HTML
                dependencyCheckPublisher pattern: 'dependency-check-report/dependency-check-report.html'
            }
        }
    }
    post {
        always {
            // Archive le rapport HTML généré par Dependency-Check
            archiveArtifacts artifacts: 'dependency-check-report/dependency-check-report.html', allowEmptyArchive: true
        }
    }
}
